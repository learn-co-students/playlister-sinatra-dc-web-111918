<h1>Show Genres</h1>
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%= @genre.name %></title>
  </head>
  <body>
    <h2>Songs</h2>
    <ul>
    <% @genre.songs.each do |song|%>
        <li><a href="/songs/<%= song.slug %>"><%=song.name%></a> -
        <a href="/artists/<%= Artist.all.find_by(name: song.artist.name).slug %>"><%= song.artist.name %> </a></li>
    <%end%>
    </ul>
  </body>
</html>
